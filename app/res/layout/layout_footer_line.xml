<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/gray_line"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_line"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/heihgt_45dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/pull_text_line"
            android:textColor="@color/gray5"
            android:textSize="@dimen/text_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/heihgt_20dp"
            android:layout_marginRight="@dimen/heihgt_20dp"
            android:layout_toRightOf="@+id/txt_line"
            android:background="@color/gray4" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/heihgt_20dp"
            android:layout_marginRight="@dimen/heihgt_20dp"
            android:layout_toLeftOf="@+id/txt_line"
            android:background="@color/gray4" />
    </RelativeLayout>
</LinearLayout>