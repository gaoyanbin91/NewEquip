<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_45"
        android:layout_marginTop="@dimen/mar_20"
        android:background="@color/theme_color"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="@dimen/mar_45"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/mar_5"
            android:padding="@dimen/mar_5"
            android:src="@mipmap/face"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="设施设备管理系统"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18"/>

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="@dimen/mar_45"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/mar_5"
            android:padding="@dimen/mar_5"
            android:src="@mipmap/icon_search_white"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_110"
        android:layout_marginTop="@dimen/mar_65"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout">

        <RelativeLayout
            android:id="@+id/rl_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="@dimen/mar_60"
                android:layout_height="@dimen/mar_60"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/mar_5"
                android:text="报修"
                android:textSize="@dimen/text_14"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_sao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="@dimen/mar_60"
                android:layout_height="@dimen/mar_60"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/mar_5"
                android:text="扫一扫"
                android:textSize="@dimen/text_14"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_sign"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="@dimen/mar_60"
                android:layout_height="@dimen/mar_60"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/mar_5"
                android:text="考勤打卡"
                android:textSize="@dimen/text_14"/>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_90"
        android:layout_marginTop="215dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/text1"
                android:layout_width="@dimen/mar_40"
                android:layout_height="@dimen/mar_40"
                android:layout_centerHorizontal="true"
                android:background="@drawable/work_home_bg"
                android:gravity="center"
                android:text="23"
                android:textColor="@color/black"
                android:textSize="@dimen/text_18"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/mar_5"
                android:text="我的关注"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/text2"
                android:layout_width="@dimen/mar_40"
                android:layout_height="@dimen/mar_40"
                android:layout_centerHorizontal="true"
                android:background="@drawable/work_home_bg"
                android:gravity="center"
                android:text="11"
                android:textColor="@color/black"
                android:textSize="@dimen/text_18"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/mar_5"
                android:text="我发起的"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/text3"
                android:layout_width="@dimen/mar_40"
                android:layout_height="@dimen/mar_40"
                android:layout_centerHorizontal="true"
                android:background="@drawable/work_home_bg"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/black"
                android:textSize="@dimen/text_18"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/mar_5"
                android:text="我的工作"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/text4"
                android:layout_width="@dimen/mar_40"
                android:layout_height="@dimen/mar_40"
                android:layout_centerHorizontal="true"
                android:background="@drawable/work_home_bg"
                android:gravity="center"
                android:text="13"
                android:textColor="@color/black"
                android:textSize="@dimen/text_18"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/mar_5"
                android:text="我的审核"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/text_normal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_50"
        android:layout_marginTop="@dimen/mar_15"
        android:background="@color/white"
        android:gravity="center|left"
        android:paddingLeft="@dimen/mar_15"
        android:text="常用应用"
        android:textColor="@color/black"
        android:textSize="@dimen/text_18"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"/>

    <GridView
        android:id="@+id/gv_home_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:horizontalSpacing="0dp"
        android:listSelector="@null"
        android:numColumns="4"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="0dp"
        app:layout_constraintTop_toBottomOf="@+id/text_normal"
        >

    </GridView>


</android.support.constraint.ConstraintLayout>