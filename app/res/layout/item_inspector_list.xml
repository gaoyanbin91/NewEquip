<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/mar_5"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_160"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_60"
            android:layout_marginLeft="@dimen/mar_15"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/mar_30"
                android:layout_height="@dimen/mar_30"
                android:layout_gravity="center"
                android:src="@mipmap/task"/>

            <LinearLayout
                android:paddingRight="@dimen/mar_15"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/mar_15"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/mar_25"
                    android:layout_marginTop="@dimen/mar_5"
                    android:gravity="center"
                    android:text="约克冷冻机"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14"
                    />

                <TextView
                    android:id="@+id/text_record_code"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/mar_25"
                    android:gravity="center|left"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/text_14"
                    tools:text="2018 1sssss0"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_1"
            android:layout_marginLeft="@dimen/mar_35"
            android:background="@color/gray_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_30"
            android:layout_marginLeft="@dimen/mar_40"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_time_get"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/mar_30"
                android:layout_marginTop="@dimen/mar_5"
                android:gravity="center|left"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/text_14"/>

            <TextView
                android:id="@+id/text_get_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="center|left"
                android:layout_marginRight="@dimen/mar_10"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/text_14"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/mar_40"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_dispatch_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/text_14"/>

            <TextView
                android:id="@+id/text_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="center|left"
                android:text="接单人："
                android:textColor="@color/text_hint"
                android:textSize="@dimen/text_14"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_1"
            android:background="@color/gray_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_40"
            android:layout_marginLeft="@dimen/mar_10">


            <TextView
                android:id="@+id/text_todo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/mar_30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/mar_20"
                android:gravity="center"
                android:paddingLeft="@dimen/mar_10"
                android:paddingRight="@dimen/mar_10"
                android:textSize="@dimen/text_14"/>


        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

