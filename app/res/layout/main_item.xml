<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/plugin_Rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_grid_item_selector">
    <ImageView
        android:id="@+id/iv_model_image"
        android:padding="@dimen/mar_5"
        android:layout_width="@dimen/mar_50"
        android:layout_height="@dimen/mar_50"
        android:layout_marginTop="@dimen/mar_10"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_model_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_model_image"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_12"
        android:text="日报"
        android:layout_marginBottom="@dimen/mar_10"
        android:textColor="@color/gray_999999"
        />
</RelativeLayout>
