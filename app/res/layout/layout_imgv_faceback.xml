<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_pic"
        android:layout_width="@dimen/heihgt_70dp"
        android:layout_height="@dimen/heihgt_70dp"
        android:layout_marginRight="@dimen/heihgt_10dp">

        <ImageView
            android:id="@+id/imgv_face"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_add_image" />
        <ImageView
            android:id="@+id/imgv_del"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/heihgt_4dp"
            android:layout_marginRight="@dimen/heihgt_4dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/sx_btn_qingchu"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>