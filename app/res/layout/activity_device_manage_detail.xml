<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray2"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_45"
        android:background="@color/theme_color"
        android:elevation="0dp"
        android:gravity="left"
        android:minHeight="@dimen/mar_45"
        app:navigationIcon="@mipmap/white_back"
        app:title="">

        <TextView
            android:id="@+id/mTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="设备详情"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_40"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/mar_15">

        <TextView
            android:id="@+id/text_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:textColor="@color/gray5"
            android:textSize="@dimen/text_16"/>

        <LinearLayout
            android:id="@+id/ll_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="二维码:"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14"/>

            <ImageView
                android:layout_width="@dimen/mar_20"
                android:layout_height="@dimen/mar_20"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/mar_5"
                android:layout_marginRight="@dimen/mar_20"
                android:src="@mipmap/icon_two_pic"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_1"
        android:background="@color/gray1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_33"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/mar_10">

        <TextView
            android:layout_width="@dimen/mar_60"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="设备名："
            android:textColor="@color/gray5"
            android:textSize="@dimen/text_14"/>
        <TextView
            android:id="@+id/text_name"
            android:textSize="@dimen/text_14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_33"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/mar_10">

        <TextView
            android:layout_width="@dimen/mar_60"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="专 业 ："
            android:textColor="@color/gray5"
            android:textSize="@dimen/text_14"/>
        <TextView
            android:id="@+id/text_major"
            android:textSize="@dimen/text_14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_33"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/mar_10">

        <TextView
            android:layout_width="@dimen/mar_60"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="类 别 ："
            android:textColor="@color/gray5"
            android:textSize="@dimen/text_14"/>
        <TextView
            android:id="@+id/text_type"
            android:textSize="@dimen/text_14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_33"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/mar_10">

        <TextView
            android:layout_width="@dimen/mar_60"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="系 统 ："
            android:textColor="@color/gray5"
            android:textSize="@dimen/text_14"/>
        <TextView
            android:id="@+id/text_system"
            android:textSize="@dimen/text_14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_33"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/mar_10">

        <TextView
            android:layout_width="@dimen/mar_60"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="区 域 ："
            android:textColor="@color/gray5"
            android:textSize="@dimen/text_14"/>
        <TextView
            android:id="@+id/text_region"
            android:textSize="@dimen/text_14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_33"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/mar_10">

        <TextView
            android:layout_width="@dimen/mar_60"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="型 号 ："
            android:textColor="@color/gray5"
            android:textSize="@dimen/text_14"/>
        <TextView
            android:id="@+id/text_model"
            android:textSize="@dimen/text_14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_33"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/mar_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="具体位置 ："
            android:textColor="@color/gray5"
            android:textSize="@dimen/text_14"/>
        <TextView
            android:id="@+id/text_postion"
            android:textSize="@dimen/text_14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_33"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/mar_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="生产厂家 ："
            android:textColor="@color/gray5"
            android:textSize="@dimen/text_14"/>
    </LinearLayout>


</LinearLayout>
