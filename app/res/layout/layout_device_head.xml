<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/mar_5"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_80"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_40"
            android:background="@color/gray2"
            android:orientation="horizontal"
            android:paddingRight="@dimen/mar_10"
            android:paddingLeft="@dimen/mar_10">


            <LinearLayout
                android:layout_marginTop="@dimen/mar_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_updata_cancle"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="@dimen/mar_5"
                    android:layout_width="@dimen/mar_25"
                    android:layout_height="@dimen/mar_25"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_search_gray"/>
                <EditText
                    android:background="@null"
                    android:id="@+id/text_contact"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/mar_3"
                    android:layout_weight="2"
                    android:gravity="center|left"
                    android:hint="请输入名称、编号、区域、专业等关键词"
                    android:textColor="@color/gray5"
                    android:textSize="@dimen/text_14"
                    />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_40"
            android:background="@color/gray2"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/mar_10">

            <TextView
                android:id="@+id/text_all_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/gray5"
                android:textSize="@dimen/text_16"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_1"
            android:background="@color/gray1"/>


    </LinearLayout>

</android.support.v7.widget.CardView>

